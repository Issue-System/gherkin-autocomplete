{
  "name": "gherkin-autocomplete",
  "displayName": "Gherkin Editor With AutoComplete",
  "description": "Code extension for automplete Gherkin Steps",
  "icon": "images/SBIcon.png",
  "version": "1.0.0",
  "publisher": "silverbulleters",
  "galleryBanner": {
    "color": "#0000FF",
    "theme": "dark"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/silverbulleters/gherkin-autocomplete/issues"
  },
  "homepage": "https://github.com/silverbulleters/gherkin-autocomplete/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/silverbulleters/gherkin-autocomplete.git"
  },
  "categories": [
    "Languages"
  ],
  "engines": {
    "vscode": "^1.6.0"
  },
  "main": "./out/src/extension",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "activationEvents": [
    "onLanguage:feature",
    "onCommand:gherkin-autocomplete.update"
  ],
  "contributes": {
    "commands": [
      {
        "command": "gherkin-autocomplete.update",
        "title": "Update steps cache",
        "category": "Update feature"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^6.0.46",
    "tslint": "^3.15.1",
    "typescript": "^2.0.6",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "fs-readfile-promise": "^3.0.0",
    "gherkin": "^4.0.0",
    "lokijs": "^1.4.1"
  }
}
