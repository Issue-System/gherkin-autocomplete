{
  "name": "gherkin-editor",
  "displayName": "Gherkin Editor With AutoComplete",
  "description": "Code extension for automplete Gherkin Steps",
  "icon": "images/SBIcon.png",
  "version": "1.0.1",
  "publisher": "silverbulleters",
  "galleryBanner": {
    "color": "#0000FF",
    "theme": "dark"
  },
  "license": "LICENSE.md",
  "bugs": {
    "url": "https://github.com/silverbulleters/gherkin-autocomplete/issues"
  },
  "homepage": "https://github.com/silverbulleters/gherkin-autocomplete/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/silverbulleters/gherkin-autocomplete.git"
  },
  "categories": [
    "Languages"
  ],
  "engines": {
    "vscode": "1.6.0"
  },
  "main": "./out/src/extension",

  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },

  "activationEvents": [
    "onLanguage:feature",
    "onCommand:gherkin-step.update"
  ],
  "contributes": {
    "commands": [
      {
        "command": "gherkin-step.update",
        "title": "Update steps cache",
        "category": "Update feature"
      }
    ],
    "configuration": {
      "title": "Gherkin Steps Configuration",
      "properties": {
        "gherkin-steps.featurespath": {
          "description": "path to features",
          "type": "string",
          "default": "feature"
        },
        "specflow-bsl.outDir": {
          "description": "out dir",
          "type": "string"
        }
      }
    }
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vsce": "^1.3.0",
    "vscode": "^1.0.0",
    "@types/node": "^6.0.40"
  },
  "dependencies": {
    "child-process-promise": "^1.1.0",
    "fs-readfile-promise": "^2.0.1",
    "gherkin": "^4.0.0",
    "iconv-lite": "^0.4.13",
    "lokijs": "^1.4.x"
  }
}
